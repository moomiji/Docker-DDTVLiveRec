FROM nginx:stable-alpine
ENV TZ=Asia/Shanghai
COPY nginx/ /

RUN chmod +x /docker-entrypoint.d/*.sh

ENTRYPOINT ["/docker-entrypoint.sh"]
EXPOSE 80
STOPSIGNAL SIGQUIT
CMD ["nginx", "-g", "daemon off;"]


